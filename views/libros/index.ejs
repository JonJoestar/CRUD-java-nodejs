<%- include ('../layouts/cabecera.ejs') %>
        <br/>
        <br/>
        <a href="/libros/crear" class="btn btn-dark" type="button">Crear Nuevo</a>
        <br/>
        <br/>

        
        <table class="table table-dark">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Imagen</th>
                    <th>Serial</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% for( let libro = 0; libro < libros.length; libro++ ) { %>
                    <tr>
                        <td>
                            <%=libros[libro].id %>
                        </td>
                        <td>
                            <%=libros[libro].nombre %>
                        </td>
                        <td>
                            <%=libros[libro].imagen %>
                        </td>
                        <td>
                            <%=libros[libro].serial %>
                        </td>
                        <td> Editar | Borrar</td>
                    </tr>
                    <% } %>
        
            </tbody>
        </table>
